<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.SplineActivity"
    android:id="@+id/main_spline">

    <com.example.hitsmobile.canvas.CustomView
        android:id="@+id/draw_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linear"
        android:background="@color/white"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>

    <com.example.hitsmobile.canvas.TriangleView
        android:id="@+id/draw_view2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linear"
        android:background="@color/white"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"/>

    <com.example.hitsmobile.canvas.SquareView
        android:id="@+id/draw_view3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linear"
        android:background="@color/white"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"/>

    <com.example.hitsmobile.canvas.HexagonView
        android:id="@+id/draw_view4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linear"
        android:background="@color/white"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"/>

    <com.example.hitsmobile.canvas.OctagonView
        android:id="@+id/draw_view5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linear"
        android:background="@color/white"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"/>

    <com.example.hitsmobile.canvas.PoligonView
        android:id="@+id/draw_view6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linear"
        android:background="@color/white"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgHome"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:layout_margin="@dimen/circle_margin"
                android:src="@drawable/circle_home"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/main">
            </ImageView>

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:layout_margin="@dimen/circle_margin"
                android:layout_weight="1"
                android:src="@drawable/circle_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/main"
                app:layout_constraintRight_toRightOf="@+id/main">
            </ImageView>

            <ImageView
                android:id="@+id/imgSpline"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:layout_margin="@dimen/circle_margin"
                android:layout_weight="1"
                android:src="@drawable/circle_spline"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/imgHome"
                app:layout_constraintRight_toRightOf="@+id/imgCamera">
            </ImageView>

            <ImageView
                android:id="@+id/imgShapes"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:layout_margin="@dimen/circle_margin"
                android:src="@drawable/circle_shapes"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/imgCamera"
                app:layout_constraintRight_toRightOf="@+id/imgSave">
            </ImageView>

            <ImageView
                android:id="@+id/imgSave"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:layout_margin="@dimen/circle_margin"
                android:src="@drawable/circle_save"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/imgShare"
                app:layout_constraintRight_toRightOf="@+id/imgCamera">
            </ImageView>

            <ImageView
                android:id="@+id/imgShare"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:layout_margin="@dimen/circle_margin"
                android:src="@drawable/circle_share"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/imgCamera"
                app:layout_constraintRight_toRightOf="@+id/imgSave">
            </ImageView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>