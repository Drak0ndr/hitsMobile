<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/circle_radius">
            </corners>
            <solid android:color="@color/white">
            </solid>
            <size
                android:width="@dimen/circle_color_size"
                android:height="@dimen/circle_color_size">
            </size>
        </shape>
    </item>
    <item android:top="@dimen/circle_padding" android:bottom="@dimen/circle_padding"
        android:left="@dimen/circle_padding" android:right="@dimen/circle_padding">
        <shape
            android:shape="rectangle">
            <corners android:radius="@dimen/circle_radius">
            </corners>
            <solid android:color="@color/purple">
            </solid>
        </shape>
    </item>
</layer-list>